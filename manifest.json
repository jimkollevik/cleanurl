{
    "manifest_version": 3,
    "name": "Clean URL Copier",
    "version": "1.0",
    "description": "Removes everything after '/?' when copying URLs.",
    "permissions": ["clipboardWrite"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    }
}