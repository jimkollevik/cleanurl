{
    "manifest_version": 3,
    "name": "Clean URL Copier",
    "version": "1.0",
    "description": "Removes everything after '/?' when copying URLs.",
    "permissions": ["activeTab", "clipboardWrite", "scripting", "storage"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {}
    }
}